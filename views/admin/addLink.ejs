<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= pageTitle %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="/style/admin.css">
    <link rel="stylesheet" href="/editor-md/css/editormd.css">
</head>
<body>
<%- include('header') %>
<%- include('sidebar') %>
<div class="warp-con">
    <h3 class="page-title">添加连接</h3>
    <div class="page-panel">
        <div class="page-panel-con">
            <div class="a-item cl">
                <div class="pfl a-item-sign">连接名称</div>
                <div class="pfl a-item-con">
                    <input type="text" placeholder="连接名称" id="link-title" class="a-item-input" value="">
                </div>
            </div>
            <div class="a-item cl">
                <div class="pfl a-item-sign">连接路径</div>
                <div class="pfl a-item-con">
                    <input type="text" placeholder="连接地址" id="link-url" class="a-item-input" value="">
                </div>
            </div>

            <div class="a-item cl">
                <div class="pfl a-item-sign">连接图片</div>
                <div class="pfl a-item-con">
                    <input type="text" placeholder="连接图片" id="uploadfileurl" class="a-item-input" value="">
                </div>
            </div>
            <div class="a-item cl">
                <div class="pfl a-item-sign">　</div>
                <div class="pfl a-item-con">
                    <div class="uploadfilewarp">
                        <input class="defaultfilebtn" type="file" id="uploadfilebtn" name="editormd-image-file" accept="image/*">
                        <input class="uploadbtn" type="button" value="本地上传">
                    </div>
                </div>
            </div>
            <div class="a-item-submit">
                <button type="button" id="submitLink" class="ui-button">提交</button>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>
<script type="text/javascript">
    $(function () {
        $("#submitLink").click(function () {
            let linkTitle = $("#link-title").val();
            let linkUrl = $("#link-url").val();
            let linkIcon = $("#uploadfileurl").val();
            if ([linkTitle, linkUrl, linkIcon].some(function (e) {
                return e === '' || e === undefined
            })) {
                alert('连接信息不能为空')
                return
            }
            $.showLoading();
            let postData = {
                title: linkTitle,
                url: linkUrl,
                icon: linkIcon
            }
            $.ajax({
                cache: false,
                url: '/admin/link/add',
                type: 'post',
                data: postData,
                dataType: 'json'
            }).then(function (result) {
                $.closeLoading();
                if (result.state === 0) {
                    alert(result.message);
                }
                if (result.state === 1) {
                    alert(result.message);
                    window.location.href = '/admin/link/';
                }
            }).catch(function () {
                $.closeLoading();
                alert("服务器错误，请稍后重试")
            })
        })
    });
</script>
</body>
</html>